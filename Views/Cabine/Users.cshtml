@model WillThisWork.ViewModels.UsersViewModel

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Cabine/_CabinePartial.cshtml";
}

<div class="container">
    <h2>Users</h2>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Roles @*@Html.LabelFor(m => user.Roles, new { @class = "control-label" })*@</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        @if (Model.Users != null)
        {
            var iterator = 0;
            foreach (var user in Model.Users)
            {
                iterator++;
                <tbody>
                    <tr id="coolTable">
                        <th scope="row">@iterator</th>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            @Html.DropDownListFor(m => user.Roles, Model.GetSelectListItemsWithSelectedValue(user.Roles.FirstOrDefault().RoleId), new { @class = "form-control" })
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary"><i class="far fa-eye"></i></button>
                            <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                            <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                        </td>
                    </tr>

                </tbody>

            }

        }
    </table>
    </div>

<style>

    .btn-primary{

    }

    h4 {
        margin: 2rem 0rem 1rem;
    }

    .table-image {
        td, th

    {
        vertical-align: middle;
    }

    }
